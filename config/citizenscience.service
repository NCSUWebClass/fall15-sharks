[Unit]
Description=Gunicorn instance to serve citizen science website
After=network.target

[Service]
User=root
Group=nginx
WorkingDirectory=/var/www/CitizenScience
Environment="PATH=/var/www/CitizenScience/.env/bin"
ExecStart=/var/www/CitizenScience/.env/bin/gunicorn --workers 3 --bind unix:/var/www/CitizenScience/project/web.sock -m 007 project.wsgi:app
Restart=always

[Install]
WantedBy=multi-user.target

